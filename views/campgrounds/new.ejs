<% include ../templates/header%>
<div style='width:30%; margin:20px auto'>
    <h2 class='ml-2'>
        Create a Campground
    </h2>
    
        <form action='/campgrounds' method='POST'>
            <div class='form-group'>
                <input class='form-control' type='text' name='campground[name]' placeholder='Enter campground name'>
            </div>
            <div class='form-group'>
                <input class='form-control' type='text' name='campground[image]' placeholder='Enter campground url '>
            </div>
			<div class='form-group'>
                <button class='btn btn-primary btn-lg btn-block form-control p-0'>
                    Submit
                </button>
            </div>
            
                
            

        </form>
        <a href='/campgrounds' class='ml-2'>go back</a>
    </div>

