<% include ../templates/header%>
        <header class='jumbotron p-4'>
            <div class='container text-center'>
                <h1 class=''>
                    Welcome to the Yelpcamp!
                </h1>
                <h5 class='mt-3'>
                    View our handpicked camps from all over world
                </h5>
                <a class='btn btn-primary btn-md mt-3' href='/campgrounds/new'>add new campground</a>
            </div>
        </header>

        <div class='row text-center'>
            <% campgrounds.forEach(function (campground){%>

                <div class="col-lg-3 col-md-4 col-sm-6 rounded float-left" style='display:flex; flex-wrap:wrap;'>
					<div class='caption text-center'>
                        <h6 class='text-center'>
                            <%=	campground.name%>
                        </h6>
                    </div>
                    <img src="<%=campground.image %>" class='img-thumbnail float-left'>
					<div class='text-center mt-3'>
                        <a class='btn btn-primary btn-sm' href='/campgrounds/<%=campground._id%>'>
                            view details
                        </a>
                    </div>
                    
                </div>
                <%})%>
        </div>

    
    <% include ../templates/footer%>